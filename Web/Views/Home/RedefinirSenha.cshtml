@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Space FTEC - Redefinir Senha</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: #1f1f1f;
            background-attachment: fixed;
        }
        .gradient-text {
            background: linear-gradient(45deg, #3a7bd5, #00d2ff);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .input-focus:focus {
            border-color: grey;
            box-shadow: 0 0 0 1px grey;
            color: white;
        }

        .btn-primary {
            background: #000000;
        }

        .login-box {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            border-radius: 12px;
            backdrop-filter: blur(5px);
            background-color: #3a7bd5;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .brand-logo i {
            font-size: 2rem;
            margin-right: 10px;
            color: #3a7bd5;
        }
        .success-message {
            display: none;
            animation: fadeIn 0.5s ease-in-out;
        }
        .c-black {
            color:black;
        }
        .c-white {
            color:white;
        }
        .border-dark{
            border-color: #1f1f1f;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <!-- Box de Recuperação de Senha -->
        <div class="login-box p-8 w-full">
            <div class="brand-logo mb-8">
                <h1 class="text-4xl font-bold">Space FTEC</h1>
            </div>

            <h2 class="c-black text-2xl font-semibold mb-2">Redefinir sua senha</h2>
            <p class="c-black mb-6">Caso exista uma conta vinculada a esse email, enviaremos as instruções</p>

            <!-- Formulário de Recuperação -->
            <form id="recoveryForm" class="space-y-4">
                <div id="emailForm">
                    <!-- Campo de Email -->
                    <div>
                        <label for="email" class="c-black block text-sm font-medium mb-1">Email</label>
                        <div class="relative">
                            <input type="email" id="email" placeholder="Email"
                                   class="bg-black c-white w-full px-4 py-3 border border-dark rounded-lg text-sm input-focus focus:outline-none pl-10" required>
                            <i class="fas fa-envelope absolute left-3 top-3.5 text-gray-400"></i>
                        </div>
                    </div>

                    <button type="submit"
                            class="w-full py-2.5 px-4 rounded-lg text-white font-semibold btn-primary mt-4">
                        Enviar
                    </button>
                </div>

                <!-- Mensagem de sucesso (inicialmente oculta) -->
                <div id="successMessage" class="success-message text-center py-4">
                    <div class="text-green-500 text-5xl mb-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Email enviado com sucesso!</h3>
                    <p class="text-gray-600 mb-4">Verifique sua caixa de entrada e siga as instruções para redefinir sua senha.</p>
                    <a href="login.html" class="text-blue-600 font-semibold hover:text-blue-800 transition-colors">
                        <i class="fas fa-arrow-left mr-1"></i> Voltar para o login
                    </a>
                </div>
            </form>
            <div class="login-box-2 mt-4 p-6 text-center">
                <p class="text-sm text-gray-600">
                    <a href="/home/login" class="c-black font-semibold">Faça login</a>
                </p>
            </div>
        </div>

    </div>

    <script>
        // Simulação do envio do formulário
        document.getElementById('recoveryForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const email = document.getElementById('email').value;

            // Validação básica
            if (!email) {
                alert('Por favor, digite seu email cadastrado.');
                return;
            }

            // Simulação de envio bem-sucedido
            console.log('Solicitação de recuperação enviada para:', email);

            // Esconde o formulário e mostra a mensagem de sucesso
            document.getElementById('emailForm').style.display = 'none';
            document.getElementById('successMessage').style.display = 'block';

            // Em uma implementação real, aqui você faria uma chamada AJAX para o servidor
        });
    </script>
</body>
</html>