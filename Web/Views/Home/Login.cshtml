@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FTEC Social - Entre ou Cadastre-se</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: #1f1f1f;
            background-attachment: fixed;
        }

        .gradient-text {
            background: #000000;
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .input-focus:focus {
            border-color: grey;
            box-shadow: 0 0 0 1px grey;
        }

        .btn-login {
            background: #000000;
        }

            .btn-login:hover {
                background: linear-gradient(to right, #000000, grey);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .login-box {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            border-radius: 12px;
            backdrop-filter: blur(5px);
            background-color: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .brand-logo {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .brand-logo i {
                font-size: 2rem;
                margin-right: 10px;
                color: #3a7bd5;
            }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <!-- Box de Login -->
        <div class="login-box p-8 w-full">
            <div class="brand-logo mb-8">
                <h1 class="text-4xl font-bold gradient-text">Space FTEC</h1>
            </div>

            <form id="loginForm" class="space-y-4">
                <div>
                    <h1 class="text-sm text-black font-bold">Email</h1>
                    <input type="text" id="username" placeholder="Email/Usuário"
                           class="w-full px-4 py-3 border border-grey-200 rounded-lg text-sm input-focus focus:outline-none">
                </div>
                <div>
                    <h1 class="text-sm text-black font-bold">Senha</h1>
                    <input type="password" id="password" placeholder="Senha"
                           class="w-full px-4 py-3 border border-gray-200 rounded-lg text-sm input-focus focus:outline-none">
                </div>

                <button type="submit"
                        class="w-full py-2.5 px-4 rounded-lg text-white font-semibold btn-login">
                    Entrar
                </button>

                <div class="text-center mt-4">
                    <a href="/home/redefinirsenha" class="text-sm text-black font-bold hover:text-grey-800 transition-colors">Esqueceu a senha?</a>
                </div>
            </form>
            <div class="login-box-2 mt-4 p-6 text-center">
                <p class="text-sm text-gray-600">
                    Não tem uma conta? <a href="/home/registrar" class="text-black font-bold hover:text-grey transition-colors">Cadastre-se</a>
                </p>
            </div>
        </div>

        <!-- Link para cadastro -->

    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (!username || !password) {
                alert('Por favor, preencha todos os campos.');
                return;
            }

            // Simulação de login
            console.log('Tentativa de login:', username);
            alert('Bem-vindo ao FTEC Social! (Demonstração)');
        });
    </script>
</body>
</html>
