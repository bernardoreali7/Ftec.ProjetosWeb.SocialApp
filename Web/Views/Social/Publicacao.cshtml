@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Space FTEC - Publicação</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f8fafc;
        }

        .sidebar {
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            padding: 20px 0;
        }

        .sidebar-nav {
            display: flex;
            flex-direction: column;
            gap: 30px;
            width: 100%;
        }

        .sidebar-item {
            border: 1px solid black;
            background-color: black;
            color: white;
        }
        .sidebar-item:hover {
           background-color: #3b82f6;
        }

        .sidebar-logo {
            color: white;
        }

        .post-image {
            aspect-ratio: 1/1;
            object-fit: cover;
            border-radius: 34px;
        }

        .post-left-home {
            display: flex;
        }

        .post-left {
            display: flex;
            border-radius: 34px;
            margin-top: 23px;
        }
        .post-actions button:hover {
            color: #3b82f6;
        }

        .post-actions {
            height: 100%;
            padding-top: 62px;
        }

            .post-actions button:hover {
                color: #3b82f6;
            }

        .post-right-home {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .post-right {
            height: 747px;
            color: black;
            background: #3b82f6;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 1rem;
            border-radius: 34px;
        }

        .post-comments {
            margin-top: 1rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .add-comment {
            border-radius: 30px;
        }

        .actions {
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 15px;
        }

        .action-infos {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .btn-primary {
            background-color: #3b82f6;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background-color: #2563eb;
            transform: translateY(-2px);
        }
        .story-item::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, #3b82f6, #ec4899, #f59e0b);
            border-radius: 9999px;
            z-index: -1;
        }
        .story-item.active::after {
            background: linear-gradient(45deg, #3b82f6, #ec4899);
        }
        .post-image {
            aspect-ratio: 1/1;
            object-fit: cover;
        }
        .related-post {
            aspect-ratio: 1/1;
            object-fit: cover;
        }
        .single-post-image {
            max-height: 600px;
            object-fit: contain;
        }

        .time {
            width: 100%;
        }


        .bg-dark {
            background: #1f1f1f;
            background: #1f1f1f;
        }

        .c-white {
            color: white;
        }
        .publicacao {
            max-width: 75rem;
        }
    </style>
</head>
<body class="flex h-screen">
    <!-- Sidebar -->
    <div class="sidebar w-64 bg-dark shadow-md">
        <div class="brand-logo mb-8">
            <h1 class="sidebar-logo text-4xl font-bold gradient-text">Space FTEC</h1>
        </div>
        <nav class="sidebar-nav p-2">
            <a href="/social/home" class="sidebar-item active flex items-center p-3 rounded-lg mb-1">
                <i class="fas fa-home mr-3"></i>
                <span>Início</span>
            </a>
            <a href="/social/pesquisar" class="sidebar-item flex items-center p-3 rounded-lg mb-1">
                <i class="fas fa-search mr-3"></i>
                <span>Pesquisar</span>
            </a>
            <a href="/social/criar" class="sidebar-item flex items-center p-3 rounded-lg mb-1">
                <i class="fas fa-plus-circle mr-3"></i>
                <span>Criar</span>
            </a>
            <a href="/social/perfil" class="sidebar-item flex items-center p-3 rounded-lg mb-1">
                <i class="fas fa-user mr-3"></i>
                <span>Perfil</span>
            </a>
            <a href="/social/configuracoes" class="sidebar-item flex items-center p-3 rounded-lg mb-1">
                <i class="fas fa-cog mr-3"></i>
                <span>Configurações</span>
            </a>

        </nav>
        <div class="p-4 border-t border-gray-200">
            <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center text-white font-bold">
                    <i class="fas fa-user"></i>
                </div>
                <div class="ml-3">
                    <p class="c-white font-semibold">Fernando Reinaldo</p>
                    <p class="text-xs text-gray-500">@@fernando.reinaldo</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile header -->
    <div class="md:hidden fixed top-0 left-0 right-0 bg-white shadow-sm p-4 flex justify-between items-center z-10">
        <div class="flex items-center">
            <h1 class="font-bold text-blue-500">FTEC Social</h1>
        </div>
        <div class="w-8 h-8 rounded-full flex items-center justify-center text-gray-500 font-bold">
            <i class="fas fa-sign-out-alt"></i>
        </div>
    </div>

    <!-- Mobile bottom navigation -->
    <div class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 flex justify-around items-center py-3 z-10">
        <a href="/social/home" class="text-2xl text-gray-500">
            <i class="fas fa-home"></i>
        </a>
        <a href="/social/pesquisar" class="text-2xl text-gray-500">
            <i class="fas fa-search"></i>
        </a>
        <a href="/social/criar" class="text-2xl text-gray-500">
            <i class="fas fa-plus-square"></i>
        </a>
        <a href="/social/perfil" class="text-2xl text-gray-500">
            <i class="fas fa-user"></i>
        </a>
        <a href="/social/configuracoes" class="text-2xl text-gray-500">
            <i class="fas fa-cog"></i>
        </a>
    </div>
    <!-- Main content -->
    <div class="bg-dark flex-1 overflow-y-auto pt-16 md:pt-0">
        <div class="publicacao mx-auto">
            <!-- Single Post View -->
            <!-- Posts -->
            <div class="post-left-home text-white space-y-6 pb-16">
            <div class="bg-black p-4 post-left">
                <div class="post bg-dark shadow-sm overflow-hidden ">
                    <!-- Post header -->
                    <div class="bg-black flex items-center justify-between p-4">
                        <div class="flex items-center space-x-3">
                            <div class="story-item relative">
                                <div class="w-8 h-8 rounded-full bg-white p-0.5 flex items-center justify-center overflow-hidden">
                                    <img src="https://picsum.photos/200/200?random=7" alt="Profile" class="w-full h-full object-cover rounded-full">
                                </div>
                            </div>
                            <div>
                                <p class="text-white font-medium text-sm">fernando.reinaldo</p>
                            </div>
                        </div>
                        <!-- Time -->
                        <div class="time">
                            <p class="pl-3 text-xs text-gray-500">2 h</p>
                        </div>
                        <button class="text-gray-500 hover:text-gray-700">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                    </div>

                    <!-- Post image -->
                    <div class="w-full bg-black">
                        <img src="https://picsum.photos/800/800?random=1" alt="Post image" class="w-full post-image">
                    </div>
                </div>
                <div>
                    <!-- Post actions -->
                    <div class="post-actions bg-black px-4 flex center">
                        <div class="actions">
                            <div class="action-infos">
                                <button class="post-action like-btn text-2xl">
                                    <i class="far fa-heart"></i>
                                </button>
                                <p>152</p>
                            </div>
                            <div class="action-infos">
                                <button class="post-action text-2xl">
                                    <i class="far fa-comment"></i>
                                </button>
                                <p>34</p>
                            </div>
                            <button class="post-action text-2xl">
                                <i class="far fa-paper-plane"></i>
                            </button>
                            <button class="post-action save-btn text-2xl">
                                <i class="far fa-bookmark"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="post-right actions-post shadow-sm overflow-hidden">

                <!-- Caption -->
                <div class="post-right-infos">
                    <div class="px-4 pb-2">
                        <p class="text-sm">
                            <span class="font-semibold">fernando.reinaldo</span>
                            Chegando o dia da formatura! 23/08 é logo ali! #formatura
                        </p>
                    </div>

                    <!-- Comments -->
                    <div class="px-4 pb-2">
                        <div class="post-comments">
                            <p class="text-sm">
                                <span class="font-semibold">bernardo.reali</span>
                                Isso aí, Fernando!
                            </p>
                        </div>
                    </div>
                </div>




                <!-- Add comment -->
                <div class="add-comment bg-black px-4 py-3 flex items-center">
                    <input type="text" placeholder="Adicione um comentário..." class="bg-black flex-1 text-sm focus:outline-none">
                    <button class="text-blue-500 font-semibold text-sm ml-2">Publicar</button>
                </div>
            </div>
            </div>
        </div>
    </div>

    <script>
        // Menu toggle for mobile
        const menuToggle = document.getElementById('menu-toggle');
        const mobileSidebar = document.getElementById('mobile-sidebar');
        const closeMenu = document.getElementById('close-menu');

        menuToggle.addEventListener('click', () => {
            mobileSidebar.classList.remove('hidden');
        });

        closeMenu.addEventListener('click', () => {
            mobileSidebar.classList.add('hidden');
        });

        // Like button functionality
        document.querySelectorAll('.like-btn').forEach(button => {
            button.addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('far')) {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'text-red-500');
                } else {
                    icon.classList.remove('fas', 'text-red-500');
                    icon.classList.add('far');
                }
            });
        });

        // Save button functionality
        document.querySelectorAll('.save-btn').forEach(button => {
            button.addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('far')) {
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                } else {
                    icon.classList.remove('fas');
                    icon.classList.add('far');
                }
            });
        });

        // Related post click functionality
        document.querySelectorAll('.bg-gray-100').forEach(post => {
            post.addEventListener('click', function() {
                // Here you would typically navigate to the single post view
                console.log('Viewing related post');
            });
        });
    </script>
</body>
</html>