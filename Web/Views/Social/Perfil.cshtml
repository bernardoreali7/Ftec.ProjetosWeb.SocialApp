                        <div class="text-white flex items-center mr-4">
                            <i class="fas fa-heart mr-1"></i>
                            <span>999</span>
                        </div>
                        <div class="text-white flex items-center">
                            <i class="fas fa-comment mr-1"></i>
                            <span>45</span>
